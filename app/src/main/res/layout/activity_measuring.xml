<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/school_background"
    tools:context=".MeasuringActivity">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/conversion_board"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/keyboard_layout"
        app:layout_constraintStart_toStartOf="parent">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/convert_from"
            android:layout_width="wrap_content"
            android:layout_height="167dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/ic_from_panel"
            android:maxWidth="500dp"
            android:minWidth="300dp"
            app:layout_constraintBottom_toTopOf="@+id/convert_to"
            app:layout_constraintEnd_toEndOf="@+id/convert_to"
            app:layout_constraintStart_toStartOf="@+id/convert_to">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/conv_from_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Аршин"
                android:textAppearance="@style/ImperialKeypad"
                android:textColor="@color/colorPrimary"
                android:textSize="45sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/conv_from_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="8dp"
                android:background="@color/backgroundAccent"
                android:ems="10"
                android:gravity="right|center_vertical"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:text="60"
                android:textAppearance="@style/ImperialKeypad"
                android:textColor="@color/colorAccent"
                android:textIsSelectable="true"
                android:textSize="38sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/conv_from_title" />
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/convert_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="34dp"
            android:layout_marginLeft="34dp"
            android:layout_marginEnd="34dp"
            android:layout_marginRight="34dp"
            android:background="@drawable/ic_to_panel"
            android:minWidth="280dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/conv_to_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Дюйм"
                android:textAppearance="@style/ImperialKeypad"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="40sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/conv_to_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="8dp"
                android:background="@color/backgroundDark"
                android:ems="10"
                android:gravity="right|center_vertical"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:singleLine="true"
                android:text="680"
                android:textAppearance="@style/ImperialKeypad"
                android:textColor="@color/colorAccentDark"
                android:textIsSelectable="true"
                android:textSize="34sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/conv_to_title" />
        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/keyboard_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_keyboard_panel"
        android:minWidth="348dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/conversion_board"
        app:layout_constraintRight_toRightOf="@+id/conversion_board">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/digit_7"
            android:layout_width="@dimen/digit_key_side"
            android:layout_height="@dimen/digit_key_side"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/ic_digit_button"
            android:gravity="center"
            android:text="@string/key_7"
            android:textAppearance="@style/ImperialKeypad"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/digit_font_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/digit_8"
            android:layout_width="@dimen/digit_key_side"
            android:layout_height="@dimen/digit_key_side"
            android:layout_marginStart="@dimen/keypad_margin"
            android:layout_marginLeft="@dimen/keypad_margin"
            android:background="@drawable/ic_digit_button"
            android:gravity="center"
            android:text="@string/key_8"
            android:textAppearance="@style/ImperialKeypad"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/digit_font_size"
            app:layout_constraintStart_toEndOf="@+id/digit_7"
            app:layout_constraintTop_toTopOf="@+id/digit_7" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/digit_9"
            android:layout_width="@dimen/digit_key_side"
            android:layout_height="@dimen/digit_key_side"
            android:layout_marginStart="@dimen/keypad_margin"
            android:layout_marginLeft="@dimen/keypad_margin"
            android:background="@drawable/ic_digit_button"
            android:gravity="center"
            android:text="@string/key_9"
            android:textAppearance="@style/ImperialKeypad"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/digit_font_size"
            app:layout_constraintStart_toEndOf="@+id/digit_8"
            app:layout_constraintTop_toTopOf="@+id/digit_8" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/digit_4"
            android:layout_width="@dimen/digit_key_side"
            android:layout_height="@dimen/digit_key_side"
            android:layout_marginTop="@dimen/keypad_margin"
            android:background="@drawable/ic_digit_button"
            android:gravity="center"
            android:text="@string/key_4"
            android:textAppearance="@style/ImperialKeypad"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/digit_font_size"
            app:layout_constraintStart_toStartOf="@+id/digit_7"
            app:layout_constraintTop_toBottomOf="@+id/digit_7" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/digit_5"
            android:layout_width="@dimen/digit_key_side"
            android:layout_height="@dimen/digit_key_side"
            android:layout_marginStart="@dimen/keypad_margin"
            android:layout_marginLeft="@dimen/keypad_margin"
            android:layout_marginTop="@dimen/keypad_margin"
            android:background="@drawable/ic_digit_button"
            android:gravity="center"
            android:text="@string/key_5"
            android:textAppearance="@style/ImperialKeypad"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/digit_font_size"
            app:layout_constraintStart_toEndOf="@+id/digit_4"
            app:layout_constraintTop_toBottomOf="@+id/digit_8" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/digit_6"
            android:layout_width="@dimen/digit_key_side"
            android:layout_height="@dimen/digit_key_side"
            android:layout_marginStart="@dimen/keypad_margin"
            android:layout_marginLeft="@dimen/keypad_margin"
            android:layout_marginTop="@dimen/keypad_margin"
            android:background="@drawable/ic_digit_button"
            android:gravity="center"
            android:text="@string/key_6"
            android:textAppearance="@style/ImperialKeypad"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/digit_font_size"
            app:layout_constraintStart_toEndOf="@+id/digit_5"
            app:layout_constraintTop_toBottomOf="@+id/digit_9" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/digit_1"
            style="@android:style/Widget.Button"
            android:layout_width="@dimen/digit_key_side"
            android:layout_height="@dimen/digit_key_side"
            android:layout_marginTop="@dimen/keypad_margin"
            android:background="@drawable/ic_digit_button"
            android:gravity="center"
            android:text="@string/key_1"
            android:textAppearance="@style/ImperialKeypad"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/digit_font_size"
            app:layout_constraintStart_toStartOf="@+id/digit_4"
            app:layout_constraintTop_toBottomOf="@+id/digit_4" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/digit_2"
            android:layout_width="@dimen/digit_key_side"
            android:layout_height="@dimen/digit_key_side"
            android:layout_marginStart="@dimen/keypad_margin"
            android:layout_marginLeft="@dimen/keypad_margin"
            android:layout_marginTop="@dimen/keypad_margin"
            android:background="@drawable/ic_digit_button"
            android:gravity="center"
            android:text="@string/key_2"
            android:textAppearance="@style/ImperialKeypad"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/digit_font_size"
            app:layout_constraintStart_toEndOf="@+id/digit_1"
            app:layout_constraintTop_toBottomOf="@+id/digit_5" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/digit_3"
            android:layout_width="@dimen/digit_key_side"
            android:layout_height="@dimen/digit_key_side"
            android:layout_marginStart="@dimen/keypad_margin"
            android:layout_marginLeft="@dimen/keypad_margin"
            android:layout_marginTop="@dimen/keypad_margin"
            android:background="@drawable/ic_digit_button"
            android:gravity="center"
            android:text="@string/key_3"
            android:textAppearance="@style/ImperialKeypad"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/digit_font_size"
            app:layout_constraintStart_toEndOf="@+id/digit_2"
            app:layout_constraintTop_toBottomOf="@+id/digit_6" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/op_dot"
            style="@android:style/Widget.Button"
            android:layout_width="@dimen/op_key_side"
            android:layout_height="@dimen/op_key_side"
            android:layout_marginTop="@dimen/keypad_margin"
            android:background="@drawable/ic_operator_button"
            android:text="@string/key_dot"
            android:textAppearance="@style/ImperialKeypad"
            android:textColor="@color/colorAccent"
            android:textSize="28sp"
            app:layout_constraintRight_toRightOf="@+id/digit_1"
            app:layout_constraintTop_toBottomOf="@+id/digit_1" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/digit_0"
            android:layout_width="@dimen/digit_key_side"
            android:layout_height="@dimen/digit_key_side"
            android:layout_marginTop="@dimen/keypad_margin"
            android:layout_marginBottom="8dp"
            android:background="@drawable/ic_digit_button"
            android:gravity="center"
            android:text="@string/key_0"
            android:textAppearance="@style/ImperialKeypad"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/digit_font_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/digit_2"
            app:layout_constraintTop_toBottomOf="@+id/digit_2" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/op_eval"
            style="@android:style/Widget.Button"
            android:layout_width="0dp"
            android:layout_height="@dimen/op_key_side"
            android:layout_marginTop="@dimen/keypad_margin"
            android:background="@drawable/ic_operator_button_wide"
            android:text="@string/key_eval"
            android:textAppearance="@style/ImperialKeypad"
            android:textColor="@color/colorAccent"
            android:textSize="28sp"
            app:layout_constraintEnd_toEndOf="@+id/op_minus"
            app:layout_constraintStart_toStartOf="@+id/digit_3"
            app:layout_constraintTop_toBottomOf="@+id/digit_3" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/op_clear"
            style="@android:style/Widget.Button"
            android:layout_width="@dimen/op_key_side"
            android:layout_height="@dimen/op_key_side"
            android:layout_marginStart="@dimen/keypad_margin"
            android:layout_marginLeft="@dimen/keypad_margin"
            android:background="@drawable/ic_operator_button"
            android:text="@string/key_clear"
            android:textAppearance="@style/ImperialKeypad"
            android:textColor="@color/colorAccent"
            android:textSize="28sp"
            app:layout_constraintStart_toEndOf="@+id/op_back"
            app:layout_constraintTop_toTopOf="@+id/op_back" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/op_mult"
            style="@android:style/Widget.Button"
            android:layout_width="@dimen/op_key_side"
            android:layout_height="@dimen/op_key_side"
            android:layout_marginStart="@dimen/keypad_margin"
            android:layout_marginLeft="@dimen/keypad_margin"
            android:background="@drawable/ic_operator_button"
            android:text="@string/key_mult"
            android:textAppearance="@style/ImperialKeypad"
            android:textColor="@color/colorAccent"
            android:textSize="28sp"
            app:layout_constraintStart_toEndOf="@+id/op_div"
            app:layout_constraintTop_toTopOf="@+id/op_div" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/op_plus"
            style="@android:style/Widget.Button"
            android:layout_width="@dimen/op_key_side"
            android:layout_height="@dimen/op_key_side"
            android:layout_marginStart="@dimen/keypad_margin"
            android:layout_marginLeft="@dimen/keypad_margin"
            android:background="@drawable/ic_operator_button"
            android:text="@string/key_plus"
            android:textAppearance="@style/ImperialKeypad"
            android:textColor="@color/colorAccent"
            android:textSize="28sp"
            app:layout_constraintStart_toEndOf="@+id/op_minus"
            app:layout_constraintTop_toTopOf="@+id/op_minus" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/op_back"
            style="@android:style/Widget.Button"
            android:layout_width="@dimen/op_key_side"
            android:layout_height="@dimen/op_key_side"
            android:layout_marginBottom="@dimen/keypad_margin"
            android:background="@drawable/ic_operator_button"
            android:text="@string/key_back"
            android:textAppearance="@style/ImperialKeypad"
            android:textColor="@color/colorAccent"
            android:textSize="28sp"
            app:layout_constraintBottom_toTopOf="@+id/op_div"
            app:layout_constraintStart_toStartOf="@+id/op_div" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/op_div"
            style="@android:style/Widget.Button"
            android:layout_width="@dimen/op_key_side"
            android:layout_height="@dimen/op_key_side"
            android:layout_marginBottom="@dimen/keypad_margin"
            android:background="@drawable/ic_operator_button"
            android:text="@string/key_div"
            android:textAppearance="@style/ImperialKeypad"
            android:textColor="@color/colorAccent"
            android:textSize="28sp"
            app:layout_constraintBottom_toTopOf="@+id/op_minus"
            app:layout_constraintStart_toStartOf="@+id/op_minus" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/op_minus"
            style="@android:style/Widget.Button"
            android:layout_width="@dimen/op_key_side"
            android:layout_height="@dimen/op_key_side"
            android:layout_marginStart="@dimen/keypad_margin"
            android:layout_marginLeft="@dimen/keypad_margin"
            android:background="@drawable/ic_operator_button"
            android:text="@string/key_minus"
            android:textAppearance="@style/ImperialKeypad"
            android:textColor="@color/colorAccent"
            android:textSize="28sp"
            app:layout_constraintBottom_toBottomOf="@+id/digit_3"
            app:layout_constraintStart_toEndOf="@+id/digit_3" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>