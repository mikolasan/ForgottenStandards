<?xml version="1.0" encoding="utf-8"?>
<MotionScene
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">


    <ConstraintSet android:id="@+id/show_input_constraint">
        <Constraint android:id="@id/converting_area">
            <Layout
                android:layout_width="360dp"
                android:layout_height="match_parent"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintTop_toTopOf="parent"
                motion:layout_constraintBottom_toBottomOf="parent"/>
        </Constraint>
        <Constraint android:id="@id/unit_list">
            <Layout
                android:layout_width="250dp"
                android:layout_height="match_parent"
                motion:layout_constraintStart_toEndOf="@id/converting_area"
                motion:layout_constraintTop_toTopOf="parent"
                motion:layout_constraintBottom_toBottomOf="parent"/>
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/show_list_constraint">
        <Constraint android:id="@id/converting_area">
            <Layout
                android:layout_width="360dp"
                android:layout_height="match_parent"
                motion:layout_constraintEnd_toStartOf="@id/unit_list"
                motion:layout_constraintTop_toTopOf="parent"
                motion:layout_constraintBottom_toBottomOf="parent"/>
        </Constraint>
        <Constraint android:id="@id/unit_list">
            <Layout
                android:layout_width="250dp"
                android:layout_height="match_parent"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintTop_toTopOf="parent"
                motion:layout_constraintBottom_toBottomOf="parent"/>
        </Constraint>
    </ConstraintSet>

    <Transition
        motion:constraintSetStart="@id/show_list_constraint"
        motion:constraintSetEnd="@id/show_input_constraint"
        motion:duration="150"
        motion:motionInterpolator="linear">
        <OnSwipe
            motion:touchAnchorId="@id/unit_list"
            motion:touchAnchorSide="left"
            motion:dragDirection="dragLeft" />
    </Transition>

</MotionScene>